{
	"name": "baraja-core/doctrine-fulltext-search",
	"description": "Entity search engine, extremely easy to use.",
	"homepage": "https://github.com/baraja-core/doctrine-fulltext-search",
	"authors": [
		{
			"name": "Jan Barášek",
			"homepage": "https://baraja.cz"
		}
	],
	"require": {
		"php": "^8.0",
		"ext-mbstring": "*",
		"baraja-core/lock": "^v1.0",
		"doctrine/orm": "^2.7",
		"doctrine/dbal": "^3.1",
		"psr/log": "^2.0 || ^3.0",
		"ramsey/uuid": "^4.1",
		"ramsey/uuid-doctrine": "^1.7",
		"voku/portable-ascii": "^1.5"
	},
	"require-dev": {
		"nette/di": "^3.0",
		"baraja-core/doctrine": "^3.0",
		"phpstan/phpstan": "^0.12.94",
		"phpstan/extension-installer": "^1.0",
		"phpstan/phpstan-nette": "^0.12.14",
		"phpstan/phpstan-deprecation-rules": "^0.12.6",
		"phpstan/phpstan-strict-rules": "^0.12.10",
		"spaze/phpstan-disallowed-calls": "^1.1",
		"roave/security-advisories": "dev-master"
	},
	"autoload": {
		"classmap": [
			"src/"
		]
	},
	"scripts": {
		"phpstan": [
			"vendor/bin/phpstan analyse src -c phpstan.neon --level 8 --no-progress"
		]
	},
	"minimum-stability": "stable"
}
